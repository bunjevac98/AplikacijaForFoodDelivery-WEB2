
@{
    ViewBag.Title = "IzmenaProfila";
}

<h2>Moj Profil</h2>


<form action="IzmenaProfila" method="post">
    <table>
        <tr>
            <td>Korisnicko ime</td>
            <td>@ViewBag.korisnik.KorisnickoIme </td>
        </tr>
        <tr>
            <td>Lozinka</td>
            <td><input type="text" value="@ViewBag.korisnik.Lozinka" name="Lozinka" /></td>
        </tr>
        <tr>
            <td>E-mail</td>
            <td><input type="text" value="@ViewBag.korisnik.Email" name="Email" /></td>
        </tr>
        <tr>
        <tr>
            <td>Ime</td>
            <td><input type="text" value="@ViewBag.korisnik.Ime" name="Ime"/></td>
        </tr>
        <tr>
            <td>Prezime</td>
            <td><input type="text" value="@ViewBag.korisnik.Prezime" name="Prezime"/></td>
        </tr>

        <tr>
            <td>Datum rodjenja</td>
            <td>@ViewBag.korisnik.DatumRodjenja  Izmeni datum <input type="date" data-val="true" value="@ViewBag.korisnik.DatumRodjenja" name="DatumRodjenja" /></td>
        </tr>
        <tr>
            <td>Adresa</td>
            <td><input type="text" value="@ViewBag.korisnik.Adresa" name="Adresa" /></td>
        </tr>
        <tr>
            <td>Tip Korisnika</td>
            <td>
                <input list="TipKorisnika" value="@ViewBag.korisnik.TipKorisnika" name="TipKorisnika"/>
                <datalist id="TipKorisnika">
                    <option value="POTROSAC"></option>
                    <option value="DOSTAVLJAC"></option>
                </datalist>
            </td>
        </tr>
        <tr>
            <td>Slika</td>
            <td>
                <input type="file" value="@ViewBag.korisnik.Slika" name="Slika"/>
            </td>
        </tr>
        
    </table>
    <input type="submit" value="Sacuvaj izmene" />

</form>









